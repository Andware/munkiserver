<div class="widget append-bottom append-top">
	<div class="widget_title">
		<h4><%= @widget.recent_warranty_expire.title %>(<%= @widget.recent_warranty_expire.recent_warranty_expire(interval).count %>)</h4>
		<span class="icon-trangle icon-up"><%= image_tag("arrow-up.gif") %></span>
		<span class="icon-trangle icon-down icon-hidden"><%= image_tag("arrow-down.gif") %></span>
	</div>
	<div class="widget_body warranty-small">
		<% if @widget.recent_warranty_expire.recent_warranty_expire(interval).count == 0 %>
			<div class="alert-message info">
				<p>There will be no warranty expire for the next <%= interval%> days</p>
			</div>
		<% else %>
			<% @widget.recent_warranty_expire.recent_warranty_expire(interval).each do |warranty| %>
				<div class="alert-message">
					<blockquote>
						<p><strong><%= link_to "#{warranty.computer.name}'s", 
						"#{computer_path(warranty.computer.unit, warranty.computer)}\?tab=warranty_tab", :target => "_blank" %></strong> 
						warranty will expire in <strong><%= warranty.days_left %> days</strong>
						<small>...more</small>
						</p>

						<div class="alert-message-body">
							<div class="warranty-widget">
								<%= render :partial => 'computers/warranty_status', :locals => {:warranty => warranty} %>
							</div>
						</div>
					</blockquote>
				</div>
			<% end %>
		<% end %>
	</div>
</div>